<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:viewModels="clr-namespace:IsoniaCore.ViewModels"

			 mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="576"
		
 			 x:Class="IsoniaCore.Resources.Controls.ViewModelBaseIdentifier"
			 x:DataType="viewModels:ViewModelBase"
			 x:CompileBindings="True">

	<StackPanel Orientation="Horizontal">
		<PathIcon Data="{Binding Icon, Mode=OneTime}" IsVisible="{Binding Icon, Mode=OneTime, Converter={StaticResource NullToFalseConverter}}" />
		<TextBlock Text="{Binding Title, Mode=OneTime}" />
	</StackPanel>

</UserControl>
